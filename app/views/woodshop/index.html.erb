<nav>
  <div id="left">
    <h1><%= @current_user.workspace %></h1>
  </div>

  <div id="right">
    <div><%= link_to 'Ply Calculator', "/ply", class: 'navButton' %></div>
    <div><%= link_to 'Scarf Calculator', "/scarf", class: 'navButton' %></div>
  </div>
</nav>

<div id="scraps">
  <% @current_user.scraps.each do |scrap| %>
  <div id="scrap_info">
  <div>Species: <%= scrap.species %></div>
  <div>Size: <%= scrap.length %>x<%= scrap.width %></div>
  <div>Thickness: <%= scrap.thickness %> </div>
  <% end %>
  </div>
</div>

<div id="cut_list">
  <% @current_user.cuts.each do |cut| %>
  <div id="cut_info">
  <div>Species: <%= cut.species %></div>
  <div>Dimensions: <%= cut.length %>x<%= cut.height %></div>
  <div>Drumsize: <%= cut.drumsize %> </div>
  <% end %>
  </div>
</div>
